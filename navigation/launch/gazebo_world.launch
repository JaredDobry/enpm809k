<?xml version="1.0" encoding="UTF-8"?>
<launch>

    <param name="robot_description" command="cat $(find navigation)/urdf/faby.urdf" />

    <!-- Send robot joint values-->
    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
        <param name="use_gui" value="false" />
    </node>

    <!-- Send robot states to tf -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen" />
    <arg name="x" default="-1.0" />
    <arg name="y" default="0" />
    <arg name="z" default="0" />
    <arg name="roll" default="0" />
    <arg name="pitch" default="0" />
    <arg name="yaw" default="-1.5707" />

    <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
        args="-param robot_description -urdf -model Faby
              -x $(arg x) -y $(arg y) -z $(arg z)
              -R $(arg roll) -P $(arg pitch) -Y $(arg yaw)" />

    <env name="GAZEBO_MODEL_PATH" value="${GAZEBO_MODEL_PATH}:$(find navigation)/meshes/human" />
    <env name="GAZEBO_RESOURCE_PATH" value="${GAZEBO_RESOURCE_PATH}:$(find navigation)/meshes/human" />

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="paused" value="True"></arg>
        <arg name="world_name" value="$(find navigation)/worlds/human.world" />
    </include>

</launch>